# App
ENV=prod
APP_NAME=rbdcrypt
TIMEZONE=UTC

# Storage
STORAGE__DB_PATH=bot_data/rbdcrypt.sqlite3
STORAGE__WAL=true
STORAGE__SNAPSHOT_ENABLED=false
STORAGE__SNAPSHOT_PATH=bot_data/snapshots/runtime_snapshot.json

# Logging
LOGGING__LEVEL=INFO
LOGGING__JSONL=true
LOGGING__LOG_DIR=bot_data/logs
LOGGING__LOG_FILE=rbdcrypt.log
LOGGING__MAX_BYTES=4194304
LOGGING__BACKUP_COUNT=5

# Runtime (E2 Micro defaults)
RUNTIME__SCAN_INTERVAL_SEC=60
RUNTIME__WORKER_COUNT=3
RUNTIME__MAX_SYMBOLS=50
RUNTIME__CHART_ENABLED=false
RUNTIME__HEAVY_DEBUG=false
RUNTIME__ENABLE_API_CONNECTIVITY_CHECK=true
RUNTIME__ONE_SHOT=false

# Binance
BINANCE__BASE_URL=https://fapi.binance.com
BINANCE__INTERVAL=5m
BINANCE__KLINE_LIMIT=250
BINANCE__TOP_SYMBOLS_LIMIT=50
BINANCE__QUOTE_ASSET=USDT
BINANCE__BTC_SYMBOL=BTCUSDT
BINANCE__REQUEST_MIN_INTERVAL_SEC=0.12

# Retry
HTTP_RETRY__TOTAL=4
HTTP_RETRY__BACKOFF_FACTOR=0.35
HTTP_RETRY__JITTER_MAX_SEC=0.2

# Balance / Risk
BALANCE__MODE=cumulative
BALANCE__DAILY_RESET_ENABLED=false
BALANCE__STARTING_BALANCE=100
RISK__RISK_PER_TRADE_PCT=0.01
RISK__LEVERAGE=1.0
RISK__MAX_ACTIVE_POSITIONS=3
RISK__FIXED_NOTIONAL_PER_TRADE=25
RISK__MIN_RR=1.2
RISK__MIN_NOTIONAL=10
RISK__FEE_PCT_PER_SIDE=0.0004

# Filters / Score
FILTERS__ADX_MIN=18
FILTERS__ATR_PCT_MIN=0.002
FILTERS__ATR_PCT_MAX_CHOP=0.02
FILTERS__RSI_LONG_MIN=52
FILTERS__RSI_SHORT_MAX=48
FILTERS__VOLUME_RATIO_MIN=1.05
FILTERS__EMA_FAST_PERIOD=21
FILTERS__EMA_SLOW_PERIOD=55
FILTERS__BTC_TREND_FILTER_MODE=hard_block
FILTERS__CHOP_POLICY=penalty

SCORE__CANDIDATE_SCORE_MIN=55
SCORE__AUTO_SCORE_MIN=72
SCORE__SOFT_PENALTY_BTC_MISALIGNMENT=12
SCORE__CHOP_PENALTY=10

# Exit
EXIT__TP_PCT=0.012
EXIT__SL_PCT=0.008
EXIT__MAX_HOLD_MINUTES=180
EXIT__STALE_MINUTES=25
EXIT__BREAK_EVEN_TRIGGER_PCT=0.006

# Legacy parity strategy (v87-style logic; enabled by default)
LEGACY_PARITY__ENABLED=true
LEGACY_PARITY__RSI_PERIOD=9
LEGACY_PARITY__SUPERTREND_MULTIPLIER=2.8
LEGACY_PARITY__AUTO_ENTRY_RSI_LONG=62
LEGACY_PARITY__AUTO_ENTRY_RSI_SHORT=38
LEGACY_PARITY__AUTO_ENTRY_VOL_FILTER=1.42
LEGACY_PARITY__AUTO_ENTRY_ADX_THRESHOLD=22
LEGACY_PARITY__AUTO_ENTRY_MIN_ATR_PERCENT=0.85
LEGACY_PARITY__AUTO_ENTRY_MIN_POWER_SCORE=40
LEGACY_PARITY__CANDIDATE_RSI_LONG=56
LEGACY_PARITY__CANDIDATE_RSI_SHORT=44
LEGACY_PARITY__CANDIDATE_VOL_FILTER=1.15
LEGACY_PARITY__CANDIDATE_ADX_THRESHOLD=17
LEGACY_PARITY__CANDIDATE_MIN_ATR_PERCENT=0.65
LEGACY_PARITY__CANDIDATE_MIN_POWER_SCORE=28
LEGACY_PARITY__AUTO_BTC_TREND_MODE=hard_block
LEGACY_PARITY__AUTO_BTC_TREND_PENALTY=12
LEGACY_PARITY__AUTO_CHOP_POLICY=block
LEGACY_PARITY__AUTO_CHOP_PENALTY=8
LEGACY_PARITY__CHOP_ADX_THRESHOLD=18
LEGACY_PARITY__BTC_VOL_THRESHOLD=0.18
LEGACY_PARITY__SL_ATR_MULT=1.65
LEGACY_PARITY__TP_ATR_MULT=2.55
LEGACY_PARITY__COOLDOWN_MINUTES=20
LEGACY_PARITY__MAX_HOLD_MINUTES=45
LEGACY_PARITY__MAX_HOLD_ST_GRACE_BARS=2
LEGACY_PARITY__STALE_EXIT_MIN_PNL_PCT=0.15
LEGACY_PARITY__STALE_EXIT_MIN_BEST_PNL_PCT=0.60

# Ntfy notifications (example: enabled)
NOTIFICATIONS__NTFY_ENABLED=true
NOTIFICATIONS__NTFY_URL=https://ntfy.sh
NOTIFICATIONS__NTFY_TOPIC=RBD-CRYPT
NOTIFICATIONS__TIMEOUT_SEC=4
NOTIFICATIONS__DETAIL_LEVEL=detailed
NOTIFICATIONS__AUTO_SIGNAL_TOP_N=5
NOTIFICATIONS__NOTIFY_ON_CYCLE_SUMMARY=false
NOTIFICATIONS__CYCLE_SUMMARY_MIN_INTERVAL_MINUTES=30
NOTIFICATIONS__NOTIFY_ON_STARTUP=true
NOTIFICATIONS__NOTIFY_ON_RECOVERY=true
NOTIFICATIONS__NOTIFY_ON_OPEN=true
NOTIFICATIONS__NOTIFY_ON_CLOSE=true
NOTIFICATIONS__NOTIFY_ON_SCAN_DEGRADED=true
NOTIFICATIONS__NOTIFY_ON_AUTO_SIGNAL_SUMMARY=false
NOTIFICATIONS__NOTIFY_ON_RUNTIME_ERROR=true
NOTIFICATIONS__NOTIFY_ON_MISSED_SIGNAL=false
